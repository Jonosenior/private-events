<div class="container" id="add-top-padding">
<div class="row">
    <div class="col-md-1"></div>
	<div class="col-md-6">
		<div id="postlist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left"><%=@event.name%> </h3>
                            </div>
                            <div class="col-sm-3">
                                <h4 class="pull-right">
                                <small><em><%= @event.date_time.strftime("%B %d, %Y") %> <br> <%= @event.date_time.strftime("%l %P")%></em></small>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="panel-body">
                <b> <%= @event.location %></b>
                <p> Created by: <b><%= @event.creator.name.capitalize %></b>
                <br>Invited: <b>
                <% @event.attendees.each_with_index do |a, i|  %>
                  <% if a == @event.attendees.last %>
                    <%= "#{a.name.capitalize}." %>
                  <% else %>
                    <%= "#{a.name.capitalize}, "%>
                  <% end %>
                <% end %></b>
                </p>
                <%= @event.description %>
            </div>
        </div>
