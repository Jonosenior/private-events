<% provide(:title, "New Event") %>
    <div class="row" id="add-top-padding">
      <div class="col-md-4 col-centered">
        <h1>New Event.</h1>
        <%= form_for(@event) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control input-sm chat-input"%><br>

          <%= f.label :location %>
          <%= f.text_field :location, class: "form-control input-sm chat-input"%><br>

          <%= f.label :date_time %>
          <%= f.datetime_field :date_time, class: "form-control input-sm chat-input" %><br>

          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control input-lg chat-input"%><br>


          <%= f.fields_for :attendees do |attendances_form| %>
            <%= attendances_form.label :attendees %>
            <%= attendances_form.text_field :names, placeholder: "Jonathan Lucy Fabienne", class: "form-control input-sm chat-input"%><br>
          <% end %>

          <%= f.submit "Submit", class: "btn btn-primary btn-md" %>

        <% end %>
      </div>
    </div>
</div>
